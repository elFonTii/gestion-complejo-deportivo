<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Reserva de canchas</h1>
    <p class="mb-4">En este apartado podrás ver las canchas que están a tu disposición en nuestro complejo</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-secondary">Listado de canchas</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Máximo de jugadores</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cancha}}
                        <tr>
                            <td>{{tipo_cancha}}</td>
                            <td>{{players}}</td>
                            <td>{{description}}</td>
                            <td class="text text-dark">UYU{{price}}</td>
                            <td>
                                <a href="/bookings/create/new/{{id_cancha}}" class="btn btn-dark btn-block">Reservar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->