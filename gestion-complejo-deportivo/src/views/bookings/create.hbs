<div id="content-wrapper" class="d-flex flex-column">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form action="/bookings/create" method="POST">
                            <div class="form-group mb-2">
                                <div class="card-text">
                                    Datos
                                </div>
                                <input type="text" max="10" class="form-control mb-2" name="user" placeholder="Username" required autofocus >
                                <input type="number" max="99" min="1" class="form-control" name="cancha" placeholder="Cancha" required>
                            </div>
                            <div class="form-group">
                                <div class="card-text">
                                    Fecha de la reserva
                                </div>
                                <input type="date" name="date_booking" class="form-control mb-2" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success form-control"> Reservar </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>