<div class="row d-flex justify-content-left m-2">
  {{#each bookings}}
  <div class="col-lg-3">

    <!-- Dropdown Card Example -->
    <div class="card shadow mb-4">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-dark">{{tipo_cancha}} - <span class="text-info">{{paymentStatus}}</span></h6>
        <div class="dropdown no-arrow">
          <a class="dropdown-toggle">
            <i class="fas fa-futbol fa-sm fa-fw text-gray-400"></i>
          </a>
        </div>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <p class="text-dark">
              <strong>Fecha:</strong> {{date_booking}}
            </p>
          </div>
          <div class="col-lg-6">
            <p class="text-dark">
              <strong>Cancha:</strong> {{tipo_cancha}}
            </p>
          </div>
          <div class="col-lg-6">
            <p class="text-dark">
              <strong>Inicio:</strong> {{start_booking}}
            </p>
          </div>
          <div class="col-lg-6">
            <p class="text-dark">
              <strong>Fin:</strong> {{end_booking}}
            </p>
          </div>
          <div class="col-lg-12">
            <a href="/bookings/inspect/{{id_booking}}" class="btn btn-success btn-block">Inspeccionar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <h1>No hay reservas</h1>
  {{/each}}
</div>