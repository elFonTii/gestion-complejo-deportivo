<div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Reserva de canchas</h1>
                    <p class="mb-4">En este apartado podrás ver las canchas que están a tu disposición en nuestro complejo</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-secondary">Listado de canchas</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Realizada por</th>
                                            <th>ID</th>
                                            <th>Fecha</th>
                                            <th>Hora de inicio</th>
                                            <th>Hora de fin</th>
                                            <th>Cancha</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each bookings}}
                                        <tr>
                                            <td>{{user}}</td>
                                            <td>{{id_booking}}</td>
                                            <td>{{date_booking}}</td>
                                            <td>{{start_booking}}</td>
                                            <td>{{end_booking}}</td>
                                            <td><a class="link link-success" href="">{{cancha}}</a></td>
                                            {{#if (isActive booking_state)}}<td><a class="link link-success">Activa</a></td>
                                            {{else}}
                                            <td><a class="link link-warning">Inactiva</a></td>
                                            {{/if}}
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->
