<!-- Page Heading -->
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Perfil</h1>

    <div class="row">

        <div class="col-lg-3">

            <!-- Circle Buttons -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    {{#if (isMan user.gen)}}
                    <img class="card-img-top" src="/img/profile_picture.svg" alt="Card image cap">
                    {{else}}
                    <img class="card-img-top" src="/img/profile_picture_girl2.svg" alt="Card image cap">
                    {{/if}}
                    {{#if isProminent}}
                    <a href="/profile" class="link-warning">
                        <h4 class="card-title text-center text-warning mt-3">@{{user.username}}<i
                                class="ml-2 fas fa-star"></i></h4>
                    </a>
                    <div class="d-flex justify-content-center">
                        <div class="badge badge-warning p-2">
                            <p class="p m-0 font-weight-light"><i class="fas fa-medal mr-1"></i>Cliente destacado</p>
                        </div>
                    </div>
                    {{else}}
                    <a href="/profile" class="link-secondary">
                        <h4 class="card-title text-center mt-3">@{{user.username}}</h4>
                    </a>
                    {{/if}}
                </div>
                <div class="card-body">
                    <p>Aquí podrás visualizar tus datos personales, métodos de facturación y preferencias.</p>
                    <!-- User Information -->
                    <ul class="list-group list-group-flush text-center">
                        <li class="list-group-item">{{user.name}}</li>
                        <li class="list-group-item">{{user.surname}}</li>
                        <li class="list-group-item"> {{user.nacimiento}} </li>
                        <li class="list-group-item"> {{user.direccion}} </li>
                        <li class="list-group-item"> {{user.localidad}} </li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="col-lg-9">

            <div class="card mb-4 border-0">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-secondary">Mis datos</h6>
                </div>
                <div class="card-body">
                    {{#if isProminent}}
                    <h2>¡Hola <span class="font-weight-bold text-warning mb-5">{{user.name}}</span>!</h2>
                    {{else}}
                    <h2>¡Hola <span class="font-weight-bold mb-5">{{user.name}}</span>!</h2>
                    {{/if}}
                    <p class="ml-3">Aquí tendrás el control de tu perfil, sientete libre de cambiarlo y personalizarlo.
                    </p>
                    <div class="my-2"></div>
                    <div class="row">
                        <h5 class="text text-dark font-weight-bold">Datos de cuenta</h5>
                        <div class="col-lg-7">
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Usuario</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        <h6 class="text-uppercase">{{user.username}}</h6>
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h5 class="text text-dark font-weight-bold">Datos personales</h5>
                        <div class="col-lg-7">
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Nombre</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        <h6 class="text-uppercase">{{user.name}}</h6>
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Apellido</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        <h6 class="text-uppercase">{{user.surname}}</h6>
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Fecha de nacimiento</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        <h6 class="text-uppercase">{{user.nacimiento}}</h6>
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Género</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        {{#if (isMan user.gen)}}
                                        <h6 class="text">Masculino</h6>
                                        {{else}}
                                        <h6 class="text">Femenino</h6>
                                        {{/if}}
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h5 class="text text-dark font-weight-bold">Datos de facturación</h5>
                        <div class="col-lg-7">
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Dirección</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        <h6 class="text-uppercase">{{user.direccion}}</h6>
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group p-2">
                                <div class="row border-0 bg-gray-200 p-2 rounded">
                                    <div class="col-sm-4">
                                        <h6 class="text text-dark">Localidad</h6>
                                    </div>
                                    <div class="col-sm-7">
                                        <h6 class="text-uppercase">{{user.localidad}}</h6>
                                    </div>
                                    <div class="col-sm-1">
                                        <a href="">

                                        </a>
                                    </div>
                                </div>
                            </div>
                       </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="input-group mt-3">
                            <a class="btn btn-dark" href="profile/edit">Editar información</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

</div>

</div>
<!-- End of Main Content -->