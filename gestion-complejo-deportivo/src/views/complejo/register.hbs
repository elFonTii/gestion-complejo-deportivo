<div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-6 col-lg-6 col-md-6">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Registrar complejo</h1>
                                        <p class="text text-gray-900 mb-4">Registra tu complejo con su información para que los usuarios puedan visualizarlo.</p>
                                    </div>
                                    <form class="user" action="/complejo/register" method="POST">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" name="nombre_complejo" placeholder="Nombre del complejo" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" name="informacion_complejo" placeholder="Breve descripción del complejo" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" name="direccion_complejo" placeholder="Dirección del complejo" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" name="correo_complejo" placeholder="Correo electrónico del complejo" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" name="telefono_complejo" placeholder="Teléfono del complejo" required>
                                        </div>

                                        <button class="btn btn-google btn-user btn-block">
                                            <i class="fas fa-check fa-fw"></i> Crear complejo
                                        </button>
                                    </form>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
