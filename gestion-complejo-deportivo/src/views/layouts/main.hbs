</head>
<body id="page-top">
    <div id="wrapper">
    
    {{#if user}}

        {{#if (isUser user.rol)}}
            {{> navigation }}
            <div id="content-wrapper">
            {{> header }}
        {{/if}}

        {{#if (isAdmin user.rol)}}
            {{> admin-navigation }}
        <div id="content-wrapper">
            {{> header }}
        {{/if}}
    {{/if}}
        <!-- Navigation -->

        
    {{!--Sintaxis de handlebars, el texto entre tres llaves es el contenido de la plantilla (El contenido que va a variar, el resto es estático). --}}
            

            {{#if message}}
                <div class="container" style="z-index: 10;">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                    <div class="d-flex justify-content-center">
                        <div class="border-bottom-danger shadow rounded text-danger bg-light">
                            <div class="card-body">
                                {{message}}
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            {{/if}}

            {{#if success}}
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                    <div class="d-flex justify-content-center">
                        <div class="border-bottom-success shadow rounded text-success">
                            <div class="card-body">
                                {{success}}
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            {{/if}}
            {{{ body }}}
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/vendor/chart.js/Chart.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>
    <script>
        function addDarkmodeWidget() {
            const options = {
                bottom: '64px', // default: '32px'
                right: 'unset', // default: '32px'
                left: '32px', // default: 'unset'
                time: '0.5s', // default: '0.3s'
                mixColor: '#fff', // default: '#fff'
                backgroundColor: '#fff',  // default: '#fff'
                buttonColorDark: '#100f2c',  // default: '#100f2c'
                buttonColorLight: '#fff', // default: '#fff'
                saveInCookies: true, // default: true,
                label: '<i class="fas fa-adjust"></i>', // default: ''
                autoMatchOsTheme: true // default: true
            }
            new Darkmode(options).showWidget();

        window.addEventListener('load', addDarkmodeWidget);
    </script>
    <script src="/js/chart.js"></script>
    <script src="https://cdn.socket.io/3.1.3/socket.io.min.js" integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh" crossorigin="anonymous"></script>
    <script src="/js/tictac.js"></script>
