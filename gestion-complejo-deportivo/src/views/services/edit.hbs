<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Editar un servicio</h1>
                                    <p class="text text-gray-900 mb-4">Edita la información de tu servicio para que los
                                        usuarios puedan acceder a ellos.</p>
                                </div>
                                {{#if service}}
                                <form class="user" action="/services/edit/{{service.service_id}}" method="POST">
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="service_name"
                                            placeholder="Nombre del servicio" value="{{service.service_name}}" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="service_price"
                                            placeholder="Precio del servicio" value="{{service.service_price}}" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user"
                                            name="service_description" placeholder="Breve descripción del servicio"
                                            value="{{service.service_description}}" required>
                                    </div>
                                {{/if}}
                                    <div class="form-group">
                                        <select class="form-control" name="type">
                                            {{#each service_type}}
                                            <option>{{service_type_name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-google btn-user btn-block">
                                        <i class="fas fa-check fa-fw"></i> Editar servicio
                                    </button>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>