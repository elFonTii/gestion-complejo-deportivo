<div class="row row-cols-1 row-cols-md-4 ml-2 mr-2 mb-3 text-center">
  {{#if (isAdmin user.rol)}}
  {{#each services}}
  <div class="col">
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3">
        <img class="" src="" alt="">
        <h4 class="my-0 fw-normal">{{service_name}}</h4>
      </div>
      <div class="card-body">
        <h3 class="card-title text-danger pricing-card-title"><del>${{discount service_price 149.99}}</del><small
            class="text-danger fw-light">/mes</small></h3>
        <h1 class="card-title pricing-card-title">${{service_price}}<small class="text-muted fw-light">/mes</small></h1>
        <p class="card-text">{{service_description}}</p>

        <div class="row d-flex justify-content-center">
          <div class="col-6">
              <a class="btn btn-success btn-block" href="/services/edit">Editar</a>
          </div>
          <div class="col-6">
            <a class="btn btn-danger btn-block" href="/services/delete/{{service_id}}">Eliminar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  {{#each services}}
  <div class="col">
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3">
        <img class="" src="" alt="">
        <h4 class="my-0 fw-normal">{{service_name}}</h4>
      </div>
      <div class="card-body">
        <h3 class="card-title text-danger pricing-card-title"><del>${{discount service_price 149.99}}</del><small
            class="text-danger fw-light">/mes</small></h3>
        <h1 class="card-title pricing-card-title">${{service_price}}<small class="text-muted fw-light">/mes</small></h1>
        <p class="card-text">{{service_description}}</p>
        <div class="d-flex justify-content-center">
          <div class="justifiy-content-between">
            <a class="btn btn-outline-primary" href="/services/subscription/{{service_id}}">Suscribirme</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>